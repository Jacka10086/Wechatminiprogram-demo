 
<!-- pages/page2/page2.wxml -->
<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <input type="text" placeholder="搜索商品" class="search-input"/>
    <button class="search-button" bindtap="onSearch">搜索</button>
  </view>

  <!-- 轮播图 -->
  <swiper indicator-dots="{{true}}" autoplay="{{false}}" interval="{{3000}}" duration="{{500}}" current="{{current}}" class="swiper-container">
    <block wx:for="{{swiperItems}}" wx:key="index">
      <swiper-item>
        <image src="{{item.src}}" class="swiper-image"/>
      </swiper-item>
    </block>
  </swiper>
</view>
