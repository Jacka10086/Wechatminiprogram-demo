/* pages/page2/page2.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.search-bar {
  display: flex;
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
}

.search-input {
  flex: 1; 
  flex: 1;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx 0 0 5rpx;
  box-sizing: border-box;
  font-size: 16px; /* 调整字体大小 */
  height: 60rpx; /* 调整高度 */
  
}

.search-button {
  padding: 10rpx 20rpx;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 0 5rpx 5rpx 0;
  font-size: 12px; /* 调整字体大小 */
  height: 60rpx; /* 调整高度 */
  line-height: 45rpx; 
}

.swiper-container {
  width: 100%;
  height: 300px;
}

.swiper-image {
  width: 100%;
  height: 300px;
  object-fit: cover;
}

.controls {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx;
}

button {
  background-color: #007aff;
  color: #fff;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
}
